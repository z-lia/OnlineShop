<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="@dimen/navigation_header_hight"
    android:padding="@dimen/padding_nav_header">
<ImageView

    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_person"
    android:id="@+id/image_view_nav_heade"
    />
    <Button

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_view_nav_heade"
        app:layout_constraintStart_toEndOf="@id/image_view_nav_heade"
        android:id="@+id/button_login_or_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_or_signup"
        android:backgroundTint="@color/colorPrimary"
        android:elevation="8dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>